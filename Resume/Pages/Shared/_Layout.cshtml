@inject Microsoft.AspNetCore.Hosting.IHostingEnvironment HostingEnv

<!DOCTYPE html>
<html lang="en" data-bs-color-scheme>
<head>
	<!-- <base href="/"> -->
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>@ViewData["Title"]</title>
	<link rel="icon" type="image/x-icon" href="~/assets/img/favicon.ico" />
	<!-- Google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet" type="text/css" />
	<link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet" type="text/css" />
	<!-- Dev icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">
	<!-- Bootstrap, custom styles and font awesome -->
	<environment include="Development">
		<link rel="stylesheet" href="~/css/styles.css" type="text/css">
		<!-- Bootstrap-dark-5 -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/js/darkmode.js" asp-fallback-src="~/js/darkmode.js"></script>
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/css/styles.min.css" type="text/css">
		<!-- Bootstrap-dark-5 -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/js/darkmode.min.js" asp-fallback-src="~/js/darkmode.min.js"></script>
	</environment>

	<!-- Darkmode switch -->
	<script type="text/javascript">
		// Fire up onDomContentLoaded function early, so we prevent theme flickering on page loads
		darkmode.constructor.onDOMContentLoaded();
	</script>
</head>
	<body id="page-top">

	<!-- Hosting environment for JavaScript -->
	<input id="hostingEnv" type="hidden" value=@HostingEnv.EnvironmentName />

	<!-- Page loader spinner -->
	<partial name="~/Pages/Shared/Partial/_PageLoad.cshtml" />

	<!-- Blazor reconnection popup-->
	<partial name="~/Pages/Shared/Partial/_BlazorModal.cshtml" />

	<div class="page" id="page">
		<!-- Page render -->
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<!-- JQuery -->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script type="text/javascript">
		$(window).on('load', function() {
			$("#pageLoading").fadeOut("slow", function() {
				$("#page").fadeTo("fast", "1");
			});
		});
	</script>
	<!-- Popper -->
	<script src="https://unpkg.com/@@popperjs/core@@2.11.5/dist/umd/popper.min.js"></script>
	<!-- Bootstrap core JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"></script>
	<!-- Blazor framework -->
	<script src="_framework/blazor.server.js" autostart="false"></script>

	<!-- Core site JS -->
	<environment include="Development">
		<script src="~/js/bundle.js"></script>
		<script type="text/javascript">
			(function start() {
				Blazor.start({
					logLevel: 1, // LogLevel.Debug
					configureSignalR: builder => {
						//builder.withUrl("_blazor"),
						builder.configureLogging("debug") // LogLevel.Debug
					},
					reconnectionOptions: {
						maxRetries: 3,
						retryIntervalMilliseconds: 2000
					}
				});
			})()
		</script>
	</environment>
	<environment exclude="Development">
		<script type="text/javascript">
			(function start() {
				Blazor.start({
					reconnectionOptions: {
						maxRetries: 3,
						retryIntervalMilliseconds: 2000
					}
				});
			})()
		</script>
		<script src="~/js/bundle.min.js"></script>
	</environment>

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>