@using Resume.ViewComponents
@inject IViewLocalizer Localizer

<!-- Blazor popup modal -->
<environment include="Production">
    <div class="modal components-reconnect-hide" tabindex="-1" id="components-reconnect-modal" data-modal-backdrop="static">
        <div class="failed modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <h5 class="modal-title">@Localizer["LostConnection"]</h5>
                </div>
            </div>
            <div class="modal-body">
                <p>@Localizer["ConnectionToServerFailed"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="button" onclick="location.reload()">@Localizer["Reload"]</button>
                <button type="button" class="button" onclick="window.blazorReconnect()">@Localizer["Reconnect"]</button>
            </div>
        </div>
        <div class="rejected modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <h5 class="modal-title">@Localizer["ConnectionRejected"]</h5>
                </div>
            </div>
            <div class="modal-body">
                <p>@Localizer["ConnectionRejectedBody"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="button" onclick="location.reload()">@Localizer["Reload"]</button>
            </div>
        </div>
    </div>
</environment>
<environment include="Development">
    <div class="modal components-reconnect-hide" tabindex="-1" id="components-reconnect-modal" data-modal-backdrop="static">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <h5 class="modal-title">@Localizer["LostConnection"]</h5>
                </div>
            </div>
            <div class="modal-body">
                <p>@Localizer["AttemptingToReconnect"]</p>
            @Localizer["ConnectionAttempt"]
                <p>@Localizer["WaitForReconnect"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="button" onclick="location.reload()">@Localizer["Reload"]</button>
            </div>
        </div>
        <div class="failed modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <h5 class="modal-title">@Localizer["LostConnection"]</h5>
                </div>
            </div>
            <div class="modal-body">
                <p>@Localizer["ConnectionToServerFailed"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="button" onclick="location.reload()" style="margin-right: 5px">@Localizer["Reload"]</button>
                <button type="button" class="button" onclick="window.blazorReconnect()">@Localizer["Reconnect"]</button>
            </div>
        </div>
        <div class="rejected modal-content">
            <div class="modal-header">
                <div class="modal-header-content">
                    <h5 class="modal-title">@Localizer["ConnectionRejected"]</h5>
                </div>
            </div>
            <div class="modal-body">
                <p>@Localizer["ConnectionRejectedBody"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="button" onclick="location.reload()">@Localizer["Reload"]</button>
            </div>
        </div>
    </div>
</environment>
